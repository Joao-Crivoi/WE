@model ProdutosApp.Models.Produto
@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h1>Detalhes</h1>

<div>
    <h4>@Model.Nome</h4>
    <dl class="row">
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>

        <dt class="col-sm-2">Preço</dt>
        <dd class="col-sm-10">@Model.Preco.ToString("C")</dd>

        <dt class="col-sm-2">Quantidade</dt>
        <dd class="col-sm-10">@Model.QuantidadeEmEstoque</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</p>
