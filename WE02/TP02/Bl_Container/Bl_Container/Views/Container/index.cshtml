@model IEnumerable<Bl_Container.Models.Container>

<h2>Lista de Containers</h2>
<a asp-action="Create" class="btn btn-primary mb-2">Novo Container</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Número</th>
            <th>Tipo</th>
            <th>Tamanho</th>
            <th>BL</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.ID</td>
                <td>@c.Numero</td>
                <td>@c.Tipo</td>
                <td>@c.Tamanho</td>
                <td>@c.IDBl</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@c.ID" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@c.ID" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
